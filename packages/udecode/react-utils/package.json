{
  "name": "@udecode/react-utils",
  "version": "51.1.2",
  "description": "React utils",
  "keywords": [
    "utils"
  ],
  "bugs": {
    "url": "https://github.com/udecode/plate/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/udecode/plate.git",
    "directory": "packages/udecode/react-utils"
  },
  "license": "MIT",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "module": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "brl": "sh ../../../tooling/scripts/brl.sh",
    "build": "tsup --config=../../../tooling/config/tsup.config.ts",
    "build:watch": "tsup --config=../../../tooling/config/tsup.config.ts --watch",
    "clean": "rimraf dist && jest --clear-cache",
    "lint": "biome check .",
    "lint:fix": "biome check . --fix",
    "test": "jest --config=../../../jest.config.cjs --maxWorkers=1 --passWithNoTests",
    "test:watch": "jest --config=../../../jest.config.cjs --watch",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.2.3",
    "@udecode/utils": "51.1.2",
    "clsx": "^2.1.1"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
