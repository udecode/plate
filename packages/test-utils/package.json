{
  "name": "@platejs/test-utils",
  "version": "51.1.2",
  "description": "Testing utilities for Plate",
  "keywords": [
    "plate",
    "plugin",
    "slate",
    "test"
  ],
  "homepage": "https://platejs.org",
  "bugs": {
    "url": "https://github.com/udecode/plate/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/udecode/plate.git",
    "directory": "packages/test-utils"
  },
  "license": "MIT",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "module": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "brl": "sh ../../tooling/scripts/brl.sh",
    "build": "tsup --config=../../tooling/config/tsup.config.ts",
    "build:watch": "tsup --config=../../tooling/config/tsup.config.ts --watch",
    "clean": "rimraf dist && jest --clear-cache",
    "lint": "biome check .",
    "lint:fix": "biome check . --fix",
    "test": "jest --config=../../jest.config.cjs --maxWorkers=1 --passWithNoTests",
    "test:watch": "jest --config=../../jest.config.cjs --watch",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@platejs/slate": "51.1.2",
    "slate": "0.118.1",
    "slate-hyperscript": "0.115.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
