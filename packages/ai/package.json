{
  "name": "@platejs/ai",
  "version": "50.3.7",
  "description": "Text AI plugin for Plate",
  "keywords": [
    "plate",
    "plugin",
    "slate"
  ],
  "homepage": "https://platejs.org",
  "bugs": {
    "url": "https://github.com/udecode/plate/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/udecode/plate.git",
    "directory": "packages/ai"
  },
  "license": "MIT",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "module": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./react": {
      "types": "./dist/react/index.d.ts",
      "import": "./dist/react/index.mjs",
      "module": "./dist/react/index.mjs",
      "require": "./dist/react/index.js"
    }
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "brl": "yarn p:brl",
    "build": "yarn p:build",
    "build:watch": "yarn p:build:watch",
    "clean": "yarn p:clean",
    "lint": "yarn p:lint",
    "lint:fix": "yarn p:lint:fix",
    "test": "yarn p:test",
    "test:watch": "yarn p:test:watch",
    "typecheck": "yarn p:typecheck"
  },
  "dependencies": {
    "@platejs/markdown": "50.2.0",
    "@platejs/selection": "50.3.4",
    "@platejs/suggestion": "50.3.3",
    "fastest-levenshtein": "1.0.16",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@ai-sdk/react": "2.0.28",
    "@platejs/combobox": "49.0.0",
    "ai": "5.0.28"
  },
  "peerDependencies": {
    "platejs": ">=50.3.7"
  },
  "publishConfig": {
    "access": "public"
  }
}
