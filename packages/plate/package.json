{
  "name": "platejs",
  "version": "51.1.3",
  "description": "Plate â€“ a framework for building rich text editors on the web",
  "keywords": [
    "contentEditable",
    "editor",
    "framework",
    "html",
    "plate",
    "plugin",
    "rich text",
    "slate",
    "wysiwyg"
  ],
  "homepage": "https://platejs.org",
  "bugs": {
    "url": "https://github.com/udecode/plate/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/udecode/plate.git",
    "directory": "packages/plate"
  },
  "license": "MIT",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "module": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./react": {
      "types": "./dist/react/index.d.ts",
      "import": "./dist/react/index.mjs",
      "module": "./dist/react/index.mjs",
      "require": "./dist/react/index.js"
    },
    "./static": {
      "types": "./dist/static/index.d.ts",
      "import": "./dist/static/index.mjs",
      "module": "./dist/static/index.mjs",
      "require": "./dist/static/index.js"
    }
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "tsup --config=../../tooling/config/tsup.config.ts",
    "build:watch": "tsup --config=../../tooling/config/tsup.config.ts --watch",
    "clean": "rimraf dist && jest --clear-cache",
    "lint": "biome check .",
    "lint:fix": "biome check . --fix",
    "test": "jest --config=../../jest.config.cjs --maxWorkers=1 --passWithNoTests",
    "test:watch": "jest --config=../../jest.config.cjs --watch",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@platejs/core": "51.1.3",
    "@platejs/slate": "51.1.2",
    "@platejs/utils": "51.1.3",
    "@udecode/react-hotkeys": "51.1.3",
    "@udecode/react-utils": "51.1.2",
    "@udecode/utils": "51.1.2"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
