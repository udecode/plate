{
  "name": "@platejs/floating",
  "version": "51.1.2",
  "description": "React floating UI for Plate",
  "keywords": [
    "plate",
    "plugin",
    "slate"
  ],
  "homepage": "https://platejs.org",
  "bugs": {
    "url": "https://github.com/udecode/plate/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/udecode/plate.git",
    "directory": "packages/floating"
  },
  "license": "MIT",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "module": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "brl": "sh ../../tooling/scripts/brl.sh",
    "build": "tsup --config=../../tooling/config/tsup.config.ts",
    "build:watch": "tsup --config=../../tooling/config/tsup.config.ts --watch",
    "clean": "rimraf dist && jest --clear-cache",
    "lint": "biome check .",
    "lint:fix": "biome check . --fix",
    "test": "jest --config=../../jest.config.cjs --maxWorkers=1 --passWithNoTests",
    "test:watch": "jest --config=../../jest.config.cjs --watch",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@floating-ui/core": "^1.7.1",
    "@floating-ui/react": "^0.27.12"
  },
  "devDependencies": {
    "platejs": "workspace:^"
  },
  "peerDependencies": {
    "platejs": ">=51.1.3",
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
