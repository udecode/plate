{
  "name": "plate",
  "private": true,
  "license": "MIT",
  "scripts": {
    "brl": "turbo --filter \"./packages/**\" brl",
    "build": "turbo --filter \"./packages/**\" build",
    "build:apps": "turbo --filter \"./apps/www\" build",
    "build:templates": "turbo --filter \"./templates/**\" build",
    "build:tw": "turbo build:tw --filter=www",
    "build:watch": "ROARR_LOG=true turbowatch ./tooling/config/turbowatch.config.ts | roarr",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "pnpm build && changeset publish",
    "check": "pnpm lint && pnpm eslint",
    "clean": "turbo --filter \"./packages/**\" clean",
    "cli:basic": "sh ./tooling/scripts/pre-basic.sh && pnpm dlx shadcn@latest add http://localhost:3000/rd/editor-basic -o -c templates/plate-template && sh ./tooling/scripts/post-basic.sh",
    "cli:basic:dev": "sh ./tooling/scripts/pre-basic.sh && pnpm dlx shadcn@latest add http://localhost:3000/rd/paragraph-node -c ../../templates/plate-template && sh ./tooling/scripts/post-basic.sh",
    "cli:sync": "cd templates/plate-playground-template && pnpm dlx shadcn@latest add http://localhost:3000/rd/editor-ai -o",
    "cli:test": "cd templates/plate-template && pnpm dlx shadcn@latest add http://localhost:3000/rd/editor-ai -o",
    "deps:check": "pnpm dlx npm-check-updates@latest --configFileName config/ncurc.yml --workspaces --root --mergeConfig",
    "deps:update": "pnpm dlx npm-check-updates@latest --configFileName config/ncurc.yml -u --workspaces --root --mergeConfig",
    "dev": "turbo --filter=www dev",
    "dev:webrtc": "PORT=4444 node ./node_modules/y-webrtc/bin/server.js",
    "devt": "turbo devt --filter=www",
    "docs:build": "cd docs && pnpm install && pnpm build",
    "docs:start": "cd docs && pnpm install && pnpm start",
    "e2e": "pnpm playwright test --config tooling/config/playwright.config.ts",
    "gen:package": "pnpm plop --plopfile tooling/scripts/plop/plopfile.cjs package",
    "lint": "biome check .",
    "lint:fix": "biome check . --fix",
    "nuke:node_modules": "rimraf '**/node_modules'",
    "postinstall": "patch-package --patch-dir tooling/patches",
    "r": "turbo r --filter=www",
    "rc": "turbo --filter=www rc",
    "rd": "turbo rd --filter=www",
    "release": "pnpm build && changeset publish",
    "release:next": "pnpm build && changeset publish --tag next",
    "shadcn:build": "turbo shadcn:build --filter=www",
    "sync:plate": "node templates/plate-playground-template/scripts/sync-plate.cjs",
    "sync:templates": "./tooling/scripts/sync-templates.sh \"templates/*\"",
    "test": "turbo --filter \"./packages/**\" test",
    "test:coverage": "turbo --filter \"./packages/**\" test --coverage",
    "test:nc": "turbo --filter \"./packages/**\" test -- --no-cache",
    "test:r": "turbo test:r --filter=www",
    "test:wa": "turbo --filter \"./packages/**\" test -- --watchAll",
    "test:watch": "turbo --filter \"./packages/**\" test:watch",
    "translate": "ts-node tooling/scripts/translate.mjs",
    "typecheck": "turbo --filter \"./packages/**\" typecheck",
    "typecheck:all": "turbo typecheck",
    "verify": "turbo typecheck test"
  },
  "resolutions": {
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.6",
    "@changesets/cli": "2.27.11",
    "@changesets/get-github-info": "0.6.0",
    "@playwright/test": "1.53.0",
    "@roarr/cli": "5.12.4",
    "@swc/core": "1.12.0",
    "@swc/jest": "0.2.38",
    "@tailwindcss/postcss": "4.1.8",
    "@testing-library/dom": "10.4.0",
    "@testing-library/jest-dom": "6.6.3",
    "@testing-library/react": "16.3.0",
    "@testing-library/user-event": "14.6.1",
    "@types/is-hotkey": "0.1.10",
    "@types/jest": "29.5.14",
    "@types/lodash": "4.17.17",
    "@types/node": "24.0.0",
    "@types/prismjs": "1.26.5",
    "@types/prompts": "2.4.9",
    "@types/raf": "3.4.3",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2",
    "@types/validator": "13.15.1",
    "@typescript-eslint/parser": "^8.47.0",
    "app-root-path": "3.1.0",
    "autoprefixer": "10.4.21",
    "barrelsby": "2.8.1",
    "commander": "14.0.1",
    "concurrently": "9.1.2",
    "cross-env": "7.0.3",
    "dotenv": "16.5.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "7.0.1",
    "jest": "29.7.0",
    "jest-environment-jsdom": "29.7.0",
    "openai": "5.3.0",
    "patch-package": "8.0.0",
    "react": "19.2.0",
    "react-dnd-test-backend": "16.0.1",
    "react-dom": "19.2.0",
    "rimraf": "6.0.1",
    "slate-test-utils": "1.3.2",
    "tailwindcss": "4.1.8",
    "tinyglobby": "0.2.14",
    "ts-jest": "29.3.4",
    "tsup": "8.5.0",
    "turbo": "2.6.1",
    "turbowatch": "2.29.4",
    "typescript": "5.8.3",
    "typescript-eslint": "^8.47.0",
    "ultracite": "6.3.4"
  },
  "packageManager": "pnpm@10.23.0"
}
